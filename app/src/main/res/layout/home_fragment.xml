                android:layout_margin="5dp"
                android:background="@color/color24" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/letter_25"
                android:layout_margin="5dp"
                android:background="@color/color25" />
        </TableRow>
        <TableRow>
            <Button
                android:layout_width="wrap_content"
