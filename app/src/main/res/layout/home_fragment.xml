                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/letter_8"
                android:layout_margin="5dp"
                android:background="@color/color8"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/letter_9"
                android:layout_margin="5dp"
                android:background="@color/color9"/>
